maxTime(1000).

loadModule(p2p).

p2pJoin(lending, 4100).

fluent(money(A)).
initially(money(10)).
action(lend(A)).

% observe(p2pReceive(lending, node(1, 2), borrow(10)), 2, 3).

p2pReceive(lending, P, borrow(A), T1, T2) ->
  lend(A, T2, T3),
  p2pSend(lending, P, lend(A)) from T2,
  lpsHalt from T3.

updates(lend(Amt), money(A), money(A - Amt)).
